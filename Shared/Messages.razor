@using System.Linq
@using System

@inherits ComponentBase

<div class="toast-container position-fixed top-10 end-0">
    @foreach(var messageTemplate in MessagesTemplates.OrderBy(x => x.CreatedAt))
    {
        <div class="toast slide show bg-opacity-75 text-white" style="background-color: @(messageTemplate.BackgroundColor);">
            <div class="toast-body p-3">
                <div class="row">
                    <div class="col">
                        <strong>@messageTemplate.Message</strong>
                    </div>
                    <div class="col-auto">
                        <button class="btn-close text-gray" onclick="@(() => { RemoveMessage(@messageTemplate.MessageID); })" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>
